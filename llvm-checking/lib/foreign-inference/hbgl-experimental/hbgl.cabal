-- see http://haskell.org/cabal/users-guide/

name:                hbgl
version:             0.1.0.0
synopsis:            A Haskell version of the Boost Graph Library
-- description:
license:             BSD3
license-file:        LICENSE
author:              Tristan Ravitch
maintainer:          travitch@cs.wisc.edu
-- copyright:
category:            Data
build-type:          Simple
cabal-version:       >=1.10

library
  default-language: Haskell2010
  build-depends: base > 3 && < 5, containers, deepseq,
                 unordered-containers, hashable, heaps,
                 hashtables, vector, array
  hs-source-dirs: src
  ghc-options: -Wall -funbox-strict-fields
  ghc-prof-options: -auto-all
  exposed-modules: Data.Graph.Interface,
                   Data.Graph.ImmutableDigraph,
                   Data.Graph.MutableDigraph,
                   Data.Graph.Algorithms.Basic,
                   Data.Graph.Algorithms.Condense,
                   Data.Graph.Algorithms.DFS,
                   Data.Graph.Algorithms.Dominators,
                   Data.Graph.Marker.Dense,
                   Data.Graph.Marker.Sparse

