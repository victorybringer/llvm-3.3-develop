name:                iiglue
version:             0.3
synopsis:            Inferred Interface Glue
-- description:
license:             BSD3
license-file:        LICENSE
author:              Tristan Ravitch
maintainer:          tristan@nochair.net
-- copyright:
category:            Foreign
build-type:          Simple
cabal-version:       >=1.10

executable iiglue
  default-language: Haskell2010
  hs-source-dirs: tools
  build-depends: base == 4.*,
                 optparse-applicative,
                 llvm-analysis >= 0.2.0,
                 llvm-data-interop >= 0.2.0,
                 foreign-inference >= 0.2.0,
                 -- svm-simple >= 0.2.7.2,
                 cassava >= 0.3,
                 vector >= 0.10,
                 bytestring,
                 text,
                 filepath,directory,
                 deepseq,
                 lens >= 4 && < 5,
                 deepseq,
                 parallel,
                 archive-inspection
  main-is: IIGlue.hs
  ghc-options: -Wall -rtsopts -threaded

